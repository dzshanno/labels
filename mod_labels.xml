<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
	<name>MOD_LABELS</name>
	<creationDate>16/08/2018</creationDate>
	<author>David</author>
	<authorEmail>your@email.com</authorEmail>
	<authorUrl>http://your.url.com</authorUrl>
	<copyright>A copyright</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description>MOD_LABELS_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_labels">mod_labels.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>mod_labels.xml</filename>
	</files>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="labels">https://www.example.com/mod_labels.xml</server>
	</updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="domain"
					type="url"
					label="MOD_LABELS_URL_LABEL"
					description="MOD_LABELS_URL_DESCRIPTION"
					hint="https://www.example.com"
					filter="url"
					validate="url"
				/>
			</fieldset>
			<fieldset
					name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
